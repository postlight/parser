{
  "presets": [
    [
      "@babel/preset-env",
      {
        "useBuiltIns": "usage", // or "entry"
        "corejs": 3
      }
    ]
  ],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./src"],
        "alias": {
          "./utils": "utils",
          "./cleaners": "cleaners",
          "./resource": "resource",
          "./extractors": "extractors",
          "./test-helpers.js": "test-helpers",
          "./mercury.js": "mercury"
        }
      }
    ]
  ],
  "env": {
    "development": {
      "plugins": [
        [
          "@babel/plugin-transform-runtime",
          {
            "corejs": 3
          }
        ]
      ]
    }
  }
}
